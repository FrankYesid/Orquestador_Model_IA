# Ejemplo de configuración de variables de entorno
# Copia este archivo como .env y ajusta las rutas según tu sistema

# Configuración de rutas del proyecto
PROJECT_ROOT=/ruta/a/tu/proyecto
DATA_INPUT_PATH=/ruta/a/tu/proyecto/data/input
DATA_OUTPUT_PATH=/ruta/a/tu/proyecto/data/output
DB_PATH=/ruta/a/tu/proyecto/data/database.db

# Configuración de Airflow
AIRFLOW_HOME=/ruta/a/tu/proyecto/airflow
AIRFLOW__CORE__DAGS_FOLDER=/ruta/a/tu/proyecto/dags
AIRFLOW__CORE__LOAD_EXAMPLES=False
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__DATABASE__SQL_ALCHEMY_CONN=sqlite:////ruta/a/tu/proyecto/airflow/airflow.db

# Configuración de la base de datos
DB_TYPE=sqlite
DB_NAME=dummy_database
DB_TABLE_SOURCE=sales_data
DB_TABLE_TARGET=sales_transformed

# Configuración de logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Configuración ETL
BATCH_SIZE=1000
CHUNK_SIZE=500
