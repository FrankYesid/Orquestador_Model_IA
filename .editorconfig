# EditorConfig para mantener consistencia en el estilo de código
# https://editorconfig.org

root = true

# Configuración para todos los archivos
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Archivos Python
[*.py]
indent_style = space
indent_size = 4
max_line_length = 120

# Archivos YAML
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Archivos JSON
[*.json]
indent_style = space
indent_size = 2

# Archivos Markdown
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Archivos de configuración
[{Makefile,*.mk}]
indent_style = tab

# Archivos Docker
[Dockerfile*]
indent_style = space
indent_size = 2

# Archivos de shell
[*.sh]
indent_style = space
indent_size = 2
